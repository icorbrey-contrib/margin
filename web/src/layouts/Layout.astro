
---
import Sidebar from '../components/Sidebar.jsx';
import '../styles/global.css';

const { title = 'Margin' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Margin - Annotate the web" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@500;600;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-surface-50 min-h-screen text-surface-900">
		<div class="flex">
            <Sidebar client:load currentPath={currentPath} />
            <main class="flex-1 md:ml-64 p-4 md:p-8 max-w-4xl mx-auto w-full">
                <slot />
            </main>
        </div>
	</body>
</html>
